<!-- Products.hbs -->
<body>

{{! ========== Display Product Data ===========}}
<h2>Products</h2>
<p>Displays all products availible in the bakery and it's current inventory</p>

{{!---- Create a table ----}}
<table id="products-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Inventory</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section - prints row data --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.product_id}}>
            <td>{{this.product_id}}</td>
            <td>{{this.product_name}}</td>
            <td>{{this.product_description}}</td>
            <td>{{this.product_price}}</td>
            <td>{{this.product_inventory}}</td>
            <td><button onclick="deleteProduct({{this.product_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_product.js"></script>


{{! ========== Add Product Form - Method 2 ===========}}

<h2>Add New Product</h2>
<p>To add a new product, please fill in the form below and click 'Submit'.</p>
<form id="add-product-form" method="POST" action="/add-product-form">
    <label for="input-product_name">Product Name: </label>
    <input type="text" name="input-product_name" id="input-product_name">
    
    <label for="input-product_description">Product Description:</label>
    <input type="text" name="input-product_description" id="input-product_description">

    <label for="input-product_price">Product Price</label>
    <input type="number" name="input-product_price" id="input-product_price">

    <label for="input-product_inventory">Product Inventory</label>
    <input type="number" name="input-product_inventory" id="input-product_inventory">

    <input type="submit">
</form>
<script src="./js/add_product.js"></script>


