{{!-- Create a table --}}
<h2>Orders Information</h2>
<p>Displays all orders.</p>
<table id="orders-table">
    {{!-- Header section --}}
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Order Total</th>
        </tr>
    </thead>
    
    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the order_id, customer_id, order_date, and total_price in order--}}
        {{#each data}}
        <tr>
            <td>{{this.order_id}}</td>
            <td>{{this.customer_id}}</td>
            <td>{{this.order_date}}</td>
            <td>{{this.total_price}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

</body>
