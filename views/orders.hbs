{{! ========== Display Order Data ===========}}

<h2>Orders</h2>
<p>Displays all bakery orders.</p>

{{!---- Create a table ----}}
<table id="order-table">
    {{!-- Header section --}}
    <thead> 
        <tr>
            <th>Order ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Order Date</th>
            <th>Subtotal</th>
            <th>Delete</th>
        </tr>
    </thead>
    
    {{!-- Body section - prints row data --}}
    <tbody>
        {{#each ordersData}}
        <tr data-value={{this.order_id}}>
            <td>{{this.order_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.order_date}}</td>
            <td>{{this.subtotal}}</td>
            <td><button onclick="deleteOrder({{this.order_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
